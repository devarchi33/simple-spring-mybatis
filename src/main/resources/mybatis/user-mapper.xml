<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.devarchi33.dao.UserDao">

    <insert id="signUpUser" parameterType="com.devarchi33.domain.UserInfo">
        INSERT INTO cubeone_user (email, password, authority)
        VALUES (#{email}, #{password}, #{authority})
    </insert>

    <select id="dummyQuery" resultType="java.lang.String">
        SELECT 'ABCDEF12345' FROM DUAL;
    </select>

    <select id="findAllUsers" resultType="com.devarchi33.domain.UserInfo">
        SELECT * FROM cubeone_user
    </select>

    <select id="findUserByEmail" resultType="com.devarchi33.domain.UserInfo" parameterType="java.lang.String">
        SELECT * FROM cubeone_user
        WHERE email = #{email}
    </select>

    <update id="updateUser" parameterType="com.devarchi33.domain.UserInfo">
        UPDATE cubeone_user
        SET password = #{password}
        AND authority = #{authority}
        WHERE email = #{email}
    </update>

    <delete id="deleteUserByEmail" parameterType="java.lang.String">
        DELETE FROM cubeone_user
        WHERE email = #{email}
    </delete>

</mapper>