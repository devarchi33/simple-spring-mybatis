<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
	   http://www.springframework.org/schema/context/spring-context-4.0.xsd">

<context:component-scan base-package="com.skyfly33.spring.restclient"/>
<context:component-scan base-package="com.skyfly33.spring.helper"/>

<bean id="restTemplate" class="org.springframework.web.client.RestTemplate"/>
<bean id="apacheUriBuilder" class="org.apache.http.client.utils.URIBuilder"/>
<bean id="httpGet" class="org.apache.http.client.methods.HttpGet"/>
<bean id="httpPost" class="org.apache.http.client.methods.HttpPost"/>
<bean id="httpPut" class="org.apache.http.client.methods.HttpPut"/>
<bean id="httpDelete" class="org.apache.http.client.methods.HttpDelete"/>

</beans>